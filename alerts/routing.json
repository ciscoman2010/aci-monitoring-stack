apiVersion: 1
groups:
    - orgId: 1
      name: ACI
      folder: ACI
      interval: 1m
      rules:
        - uid: ccb12719-c3ed-4bb7-9cf1-83a5f36bcd63
          title: BGP Rcvd Paths
          condition: Threshold
          data:
            - refId: BGP Prefix Received Rate of Change
              relativeTimeRange:
                from: 300
                to: 0
              datasourceUid: prometheus
              model:
                editorMode: code
                expr: abs(deriv(aci_bgp_peer_prefix_received{address_family=~"ipv4-ucast|ipv6-ucast"}[$__rate_interval]))
                instant: false
                intervalMs: 1000
                legendFormat: '{{fabric}} - {{nodeid}} -{{peer_ip}} - {{vrf}}'
                maxDataPoints: 43200
                range: true
                refId: BGP Prefix Received Rate of Change
            - refId: Last BGP Received Prefix Rate of Change
              relativeTimeRange:
                from: 600
                to: 0
              datasourceUid: __expr__
              model:
                conditions:
                    - evaluator:
                        params:
                            - 0
                            - 0
                        type: gt
                      operator:
                        type: and
                      query:
                        params: []
                      reducer:
                        params: []
                        type: avg
                      type: query
                datasource:
                    name: Expression
                    type: __expr__
                    uid: __expr__
                expression: BGP Prefix Received Rate of Change
                intervalMs: 1000
                maxDataPoints: 43200
                reducer: last
                refId: Last BGP Received Prefix Rate of Change
                type: reduce
            - refId: Threshold
              relativeTimeRange:
                from: 600
                to: 0
              datasourceUid: __expr__
              model:
                conditions:
                    - evaluator:
                        params:
                            - 0.2
                            - 1
                        type: gt
                      operator:
                        type: and
                      query:
                        params: []
                      reducer:
                        params: []
                        type: avg
                      type: query
                datasource:
                    name: Expression
                    type: __expr__
                    uid: __expr__
                expression: Last BGP Received Prefix Rate of Change
                intervalMs: 1000
                maxDataPoints: 43200
                refId: Threshold
                type: threshold
          dashboardUid: fae91763-da29-46ed-9eb4-74628c957690
          panelId: 4
          noDataState: NoData
          execErrState: Error
          for: 0s
          annotations:
            __dashboardUid__: fae91763-da29-46ed-9eb4-74628c957690
            __panelId__: "4"
            description: Detected a high rate of change in the BGP Received path from External Routers.
            summary: BGP Received Path high churn detected
          isPaused: false